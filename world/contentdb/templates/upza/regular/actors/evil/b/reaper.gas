[t:template,n:upza_reaper] { specializes = upza_reaper_base; }
[t:template,n:upza_reaper_base]
{
	specializes = base_grim_reaper;

	category_name = "1W_evil_b";
	doc = "The Reaper";

    [aspect]
    {
		scale_base = 1.5;
    }
	[inventory]
	{
		[equipment]
		{
			es_weapon_hand = st_un_upza_reaper;
		}
	}
	[common]
	{
		membership=monster,immune_charm,immune_control,immune_freeze,immune_polymorph,immune_align_change,immune_explode;  // from gom
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script("upza_reaper_eye_glow");
				condition* = receive_world_message("WE_ENTERED_WORLD");
				single_shot = true;
			}
			[*]
			{
				single_shot = true;
				no_trig_bits = true;
				condition*	= receive_world_message("we_enemy_spotted");
				action* 	= call_sfx_script("unique_light_reaper(sgx)");
			}
		}
	}

    [mind]
    {
		on_engaged_lost_consciousness_abort_attack = false;
		actor_weapon_preference			= WP_MAGIC;
		actor_auto_switches_to_magic	= true;
    }
	[inventory]
	{
		selected_active_location = il_active_primary_spell;
		[other]
		{
			il_active_primary_spell=spell_gom_skull_storm;
		}
    }

	// spiralling-upwards animation
	[generator_in_object]
	{
		child_template_name = upza_reaper_die;
		spawn_event = WE_KILLED;
		spawn_chance = 1.0;
	}
    [physics]
    {
		break_effect = blood_mist;
		break_sound = s_e_meat_explosion;
		gib_gore_good = true;
		[break_particulate]
		{
            // just loads of bloody skulls
			frag_glb_upza_skull = 128;
		}
    }
	// white mist
	[effect_aftereffect]
	{
		effect=dsx_elemental_air_die2;
		effectDelay=.25;
		lifeSpan=6;
	}
}
